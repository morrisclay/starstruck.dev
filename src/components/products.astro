---
import.meta.env.GITHUB_ACCESS_TOKEN
const response = await fetch('https://api.github.com/graphql', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
    'authorization': 'Bearer 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'
  },
  body: JSON.stringify({
    query: `
    {
  repository(owner: "morrisclay", name: "starstruck.dev") {
    discussions(first: 100) {
      totalCount
      pageInfo {
        startCursor
        endCursor
        hasNextPage
        hasPreviousPage
      }
      edges {
        cursor
        node {
          id
        }
      }
      nodes {
        id
        title
        url
        createdAt
        resourcePath
        upvoteCount
        bodyText
        category {
          id
          name
        }
      }
    }
  }
}
      `
  }),
})
const data = await response.json();
---

 <div class="lg:grid lg:grid-cols-12 lg:gap-8 mt-8">
        <div class= "md:max-w-2xl md:mx-auto lg:col-span-12 lg:text-left">
    <div class="pb-5  sm:flex sm:items-center sm:justify-between">
      <h3 class="text-xl max-w-screen leading-6 font-medium text-black">Developer Tools</h3>
      <div class="mt-3 sm:mt-0 sm:ml-4">
        <a href="https://github.com/login?return_to=https%3A%2F%2Fgithub.com%2Fmorrisclay%2Fstarstruck.dev%2Fissues%2Fnew%2Fchoose"
          class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-gray-800 bg-yellow-400 hover:bg-yellow-500 hover:border-yellow-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Submit Product</a>
      </div>
    </div>
    <div class="bg-white shadow-m border-black overflow-hidden rounded-xl">
      <p class="mb-5">To upvote and join the discussion visit starstruck.dev on <a class="underline" href='https://github.com/morrisclay/starstruck.dev/discussions/categories/developer-tools' >GitHub</a></p>

      <ul role="list" class="">
        {data.data.repository.discussions.nodes.map(discussion => (
                    discussion.category.name === 'Developer Tools' && (
          <li class="my-2">
          <div class="py-4 drop-shadow-md border border-gray-400 rounded-xl bg-gray-50">
            <p class="text-xs font-light text-right text-gray-600 mr-4">created at { discussion.createdAt.slice(0, 10) }</p>
            <div class="flex space-x-4">
              <div class="flex-shrink-0 pl-5 h-5  py-2 bg-green-200">
                â¬† { discussion.upvoteCount }
              </div>
            <div class="flex-1 min-w-0 ml-5 pb-5">
                <a href={discussion.url}>
                  <h2 class="text-md font-medium text-black truncate">{discussion.title}</h2>
                  <p class="text-sm text-gray-800 pr-4 line-clamp-2 truncate">{discussion.bodyText}</p>
                </a>
            </div>
                        </div>

          </div>
        </li>)
        ))}
      </ul>
    </div>
  </div>
</div>